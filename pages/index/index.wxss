@import "../../app.wxss";

page{height:100%;}
.bottom_tab .flex-item,.top_tab .flex-item{width: 20%;text-align: center;font-size: 12px;}
.top_tab .flex-item{font-size: 16px;}
/*头部标签切换*/
.top_tab{position: fixed;width: 100%;top: 0;z-index:2;height:  30px;background-color: #ffffff;line-height: 30px;border: 1px solid #eeeeee;border-right:0px;border-left:0px;  }
.top_tab .flex-wrp .active{color:#12b7f5 }
.flex-wrp {display: flex;}
/*底部标签切换*/
.bottom_tab{position: fixed;width: 100%;bottom: 0;z-index: 2;background-color:#eeeeee;height: 50px;}
.bottom_tab icon{display: inline;font-size: 22px;}
.bottom_tab .flex-wrp .active{color:#0099CC;}
.icon-addressbook{font-size: 27px!important;}
.icon-addressbook_fill{font-size: 27px!important;}
.icon-duomeitiicon-{font-size: 26px!important;}
.bottom_tab .publish{background-color:#0099CC;color:#ffffff; width: 50px; height: 50px; line-height: 50px;border-radius:50%;font-size: 24px; margin-left: 8px;}
.bottom_tab  button{background:transparent;line-height: 20px;font-size:12px;
outline:0 none;display: inline;border: 0px;}
.bottom_tab  button view:first-child{margin-top: -20px;}
.message{font-size: 12px;}
/*内容页*/
.content{margin:40px 0px 50px 0px ;}
.section{margin-top:45rpx; }
.info{padding: 0rpx 60rpx;}
/*头像*/
.headPhoto image{width:60rpx;height: 60rpx;border-radius: 50%;}
/*昵称*/
.dtInfo {margin-left: 40rpx;}
.dtInfo .nickName{font-size:16px;}
/*基本信息*/
.baseInfo text{font-size:12px;margin-right: 30rpx;color: #999999}
/*动态的内容*/
.dt_content{margin-top: 10rpx;}
.dt_content_text{font-size:14px;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;
-webkit-line-clamp: 5;-webkit-box-orient: vertical;padding: 0rpx 60rpx;}
.dt_content_img{margin-top: 15rpx; padding: 0rpx 60rpx;}
.dt_content_img image{width:190rpx;height: 190rpx;}
.dt_content_img .moreImg{float: left;width: 210rpx;}
.moreImg{width:250rpx;}
/*服务案例的内容*/
.fwal_content{margin-top: 10rpx;}
.fwal_content_text{font-size:14px;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;
-webkit-line-clamp: 2;-webkit-box-orient: vertical;padding: 0rpx 60rpx;}
.fwal_content_img{margin-top: 15rpx; padding: 0rpx 60rpx;}
.fwal_content_img .moreImg  image{width:190rpx;height: 190rpx;}
.fwal_content_img .moreImg{float: left;width: 210rpx;}
.fwal_content_img .onlyImg {width: 310rpx;}
.moreImg{width:250rpx;}
.fwal_content_title{padding:0rpx 60rpx;margin-bottom: 15px;}
/*企业问答推荐*/
.qytw_answer_userInfo{padding:0rpx 60rpx;line-height: 15px;}
.qytw_answer_userInfo image{width: 30px;height: 30px;border-radius:50%; }
.qytw_answer_userInfo label{font-size: 14px;display: inline-block;position: relative;}
/*用户基本信息*/
.qytw{border-bottom:1px solid #eeeeee; }
.qytw .info{padding: 10px 60rpx;}
.qytw_content{padding: 5px 0px;margin-bottom: 10px;}
.qytw_content_title{font-weight: bold;padding: 0rpx 60rpx;}
.qytw_type{border: 1px solid #0099CC;font-size: 25rpx;padding: 2px 5px;border-radius:10px; margin-right: 10px;font-weight: normal;color:#0099CC; }
.qytw_info{padding: 0px 60rpx;margin-top: 10px;}
.qytw_info text{font-size: 28rpx;margin-right:12px; color: #999999;}
.answer_content_title{padding:0rpx 60rpx;margin-bottom:15px;font-weight:bold;}
.answer_content_img{margin-top:15rpx;padding:0rpx 60rpx;}
.answer_content_img .moreImg{float:left;width:210rpx;}
.answer_content_text{font-size:14px;overflow:hidden;text-overflow:ellipsis;display:-webkit-box;-webkit-line-clamp:2;-webkit-box-orient:vertical;padding:0rpx 60rpx;}
.answer_content_img  image{width:190rpx;height:190rpx;}
/*底部的功能按钮*/
.content_function{display: flex;padding-top:20rpx; clear: both;}
.content_function view{ width: 25%;font-size:12px;text-align: center;border-top:1px solid #eeeeee;padding: 25rpx 0rpx;
border-bottom:1px solid #eeeeee;}
.content_function button{background:transparent;line-height: 0px;font-size:12px;
outline:0 none;display: inline;}
.content_function button::after{border:none;border-radius:0;}
.liulan image{width: 22px;margin-right: 5px;}
.liuyan image{width: 14px;margin-right: 5px; position: relative;top:2px;}
.dianzhan image{width: 15px;margin-right: 5px;position: relative;top:2px;}
.zhuanfa image{width: 15px;margin-right: 5px;position: relative;top:2px;}
/*发布按钮*/
.button_publish{text-align: center; height:50px;position: fixed;z-index:2;bottom:0;}
.button_publish .publishBtn{ display: inline-block;width: 40px;height: 40px;position: absolute;left: 320rpx;border-radius:50%; color: #ffffff;}
.publishBtnDt{background-color: #FF6633  ;}
.publishBtnHd{background-color: #66CCFF   ;}
.publishBtnAi{background-color: #33CCCC  ;}
.publishBtnWd{background-color: #FF0033   ;}


/* 当前页的显示
.active {background-color:#ffffff;} */
