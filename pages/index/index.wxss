page{height:100%;}
.content{height:100%;}
/*头部标签切换*/
.bottom_tab .flex-item,.top_tab .flex-item{width: 20%;text-align: center;font-size: 18px;}
.active{color:#FF6633 }
.flex-wrp {display: flex;}
/*头部底部标签切换*/
.top_tab{position: fixed;width: 100%;top: 0;z-index:2;height:  80rpx;background-color: #ffffff;line-height: 80rpx;border: 1px solid #eeeeee;border-right:0px;border-left:0px;  }
.bottom_tab{position: fixed;width: 100%;bottom: 0;z-index: 2;height:80rpx;background-color: #ffffff;line-height:80rpx;}
/*内容页*/
.content{margin:120rpx 0rpx;}
.info{padding: 0rpx 60rpx;}
/*头像*/
.headPhoto image{width:100rpx;height: 100rpx;border-radius: 50%;}
/*昵称*/
.dtInfo {margin-left: 40rpx;}
.dtInfo .nickName{font-size:16px;}
/*基本信息*/
.baseInfo text{font-size: 14px;margin-right: 30rpx;color: #999999}
/*动态的内容*/
.dt_content{margin-top: 10rpx;}
.dt_content_text{font-size:14px;overflow: hidden;text-overflow: ellipsis;display: -webkit-box;
-webkit-line-clamp: 5;-webkit-box-orient: vertical;padding: 0rpx 60rpx;}
.dt_content_img{margin-top: 15rpx;}
.dt_content_img image{width:200rpx;height: 200rpx;}
.moreImg{width:250rpx;}
/*底部的功能按钮*/
.content_function{display: flex;margin-top:20rpx; }
.content_function view{ width: 25%;font-size:12px;text-align: center;border-top:1px solid #eeeeee;padding: 25rpx 0rpx;
border-bottom:1px solid #eeeeee;}