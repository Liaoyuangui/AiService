/*提问头部的输入框*/
.inputQuestionTitle{border: 1px solid #999999;margin: 10px;display: flex;}
.inputQuestionTitle input{min-width: 70%;font-size:32rpx;height: 35px;padding-left: 5px;}
.inputQuestionTitle .submit{width: 20%; text-align: center;background-color:#0099CC;color: #ffffff;border-radius: 5px;
margin: 5px 10px;padding: 5px; font-size: 32rpx;}

/*输入时根据关键字查询问题*/
.questionList{margin: 10px;border-top: 1px solid #eeeeee;}
.questionList_text{border-bottom: 1px solid #eeeeee; padding: 10px 0px;}
.questionList_title{font-weight: bold;}
.questionList_info{font-size: 32rpx; color: #666666;margin-top: 10px;}