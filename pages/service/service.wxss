@import "../index/index.wxss";

.recommendFY{ background-color: #fff; display: block;}
.guess-titleAll{width: 100%; height: 80rpx; overflow: hidden; line-height: 80rpx; background-color: #1296db;}
.guess-titleAll .guess-title{float: left; color:#111; font-weight: 600;}
.hotBooks-lists{overflow: hidden; padding-top: 85rpx;display: flex;}
.hotBooks-lists .item{display: flex; justify-content: flex-start; font-size: 1.1em; padding: 0 0 10rpx 0;}
.hotBooks-lists .hotBooks-left__image{float: left; background-color: #e3e4e5; border-radius: 4rpx;}
.hotBooks-lists .item .hotBooks-right{margin-left:25rpx; padding: 0 0 10rpx 0; width: 80%; border-bottom:1rpx solid #eaeaea; overflow: hidden; white-space: nowrap; text-overflow:ellipsis;}
.fwList{height: 980rpx;}
.hotBooks-right .hotBooks__title,
.hotBooks-right .detailS{color:#999; font-size: 0.8em; display: flex; justify-content: flex-start; align-self: center; margin-top: 10rpx;}
.hotBooks-right .detailS text{margin:0 30rpx 0 10rpx;}
.play-icon{width: 27rpx; height: 27rpx;float: right;}
.wew{width: 23px;height: 18px;padding-left: 15px;padding-top: 20px;}
.guess-titleAll{display: flex;position: fixed; z-index: 999;}
.guess-titleAll .guess-titleAll_menu{width: 10%;text-align: center;}
.guess-titleAll .guess-titleAll_selectInput{width: 80%;text-align: center;}
.guess-titleAll .guess-titleAll_selectQuery{width: 10%;text-align: center;}
.guess-titleAll .iconfont{color:#ffffff;font-size: 40rpx;}
.guess-titleAll_selectInput input{background-color: #ffffff;border-radius:5px;text-align: left;padding:1px 5px;font-size: 30rpx;margin-top: 5px;}
.hiden{display: none;}

/*左侧服务产品类别列表*/
.fwTypeList{width:30%;background-color: #eeeeee; font-size: 40rpx;white-space:nowrap;height: 980rpx;}
.fwTypeList .fwTypeitem{height: 80rpx;line-height: 80rpx; padding: 0px 5px;}
